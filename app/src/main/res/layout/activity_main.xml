<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <com.micnubinub.materiallibrary.MaterialSwitch
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        app:text="Material Switch" />

    <com.micnubinub.materiallibrary.MaterialRadioGroup
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.micnubinub.materiallibrary.MaterialRadioButton
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            app:text="Radio Button1" />

        <com.micnubinub.materiallibrary.MaterialRadioButton
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            app:text="Radio Button2" />

        <com.micnubinub.materiallibrary.MaterialRadioButton
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            app:text="Radio Button2" />

    </com.micnubinub.materiallibrary.MaterialRadioGroup>

    <com.micnubinub.materiallibrary.MaterialSeekBar
        android:layout_width="fill_parent"
        android:layout_height="35dp" />

    <com.micnubinub.materiallibrary.MaterialRippleView
        android:id="@+id/ripple"
        android:layout_width="200dp"
        android:layout_height="75dp">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:text="Button"
            android:textColor="@color/dark_grey"
            android:textSize="22sp" />
    </com.micnubinub.materiallibrary.MaterialRippleView>

    <com.micnubinub.materiallibrary.MaterialTwoLineTextIcon
        android:layout_width="fill_parent"
        android:layout_height="72dp" />

    <com.micnubinub.materiallibrary.MaterialTwoLineTextAvatar
        android:layout_width="fill_parent"
        android:layout_height="72dp" />

    <com.micnubinub.materiallibrary.MaterialTwoLineTextAvatarWithIcon
        android:layout_width="fill_parent"
        android:layout_height="72dp" />

    <com.micnubinub.materiallibrary.RippleView
        android:layout_width="200dp"
        android:layout_height="75dp">

        <com.micnubinub.materiallibrary.MaterialRadioButton
            android:layout_width="fill_parent"
            android:layout_height="55dp"
            app:text="Button2" />
    </com.micnubinub.materiallibrary.RippleView>
</LinearLayout>
